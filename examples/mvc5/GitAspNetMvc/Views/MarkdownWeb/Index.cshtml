@model MarkdownWeb.HtmlPage
@{
    ViewBag.Title = Model.Title;
    var toc = Model.GetPartOrDefault("TableOfContents");
}

<div class="markdown-web">
    @Html.Raw(Model.Body)
</div>

@if (toc != null)
{
    <div class="toc-container">
        <h1>Table of contents</h1>
        @Html.Raw(toc.Body)
    </div>
}
<hr />

@if (Model.WikiPageReference != null)
{
    <a href="https://github.com/onetrueerror/OneTrueError.Documentation/tree/master/docs@(Model.WikiPageReference.RealWikiPath+Model.WikiPageReference.Filename)">Edit page at github</a>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $('pre code').each(function (i, block) {
                hljs.highlightBlock(block);
            });
        });
    </script>
}
