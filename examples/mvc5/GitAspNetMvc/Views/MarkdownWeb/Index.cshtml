@model MarkdownWeb.HtmlPage
@{
    ViewBag.Title = Model.Title;
}

<div class="markdown-web">
    @Html.Raw(Model.Body)
</div>

<div class="toc-container">
    <h1>Table of contents</h1>
    @Html.Raw(Model.GetPartOrDefault("TableOfContents").Body)
</div>
<hr />

<a href="https://github.com/onetrueerror/OneTrueError.Documentation/tree/master/docs/@Model.WikiPath">Edit page at github</a>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('pre code').each(function (i, block) {
                hljs.highlightBlock(block);
            });
        });
    </script>
}
