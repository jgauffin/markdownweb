<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net451;netstandard2.0</TargetFrameworks>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <Authors>Jonas Gauffin</Authors>
    <PackageLicenseUrl>https://opensource.org/licenses/apache-2.0</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jgauffin/markdownweb</PackageProjectUrl>
    <MinClientVersion>2.12</MinClientVersion>
    <Description>Fetch documents through get for MarkdownWeb</Description>
    <Copyright>© jgauffin 2017</Copyright>
    <PackageTags>sequence-diagrams markdown html wiki git</PackageTags>
    <Product>MarkdownWeb ($(TargetFramework))</Product>
    <IncludeSymbols>true</IncludeSymbols>
    <GenerateDocumentationFile Condition=" '$(Configuration)' == 'Release' ">true</GenerateDocumentationFile>
    <DebugType>full</DebugType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/jgauffin/markdownweb</RepositoryUrl>
    <PackageReleaseNotes>Changed from fetch to pull</PackageReleaseNotes>
    <Version>1.0.3</Version>
  </PropertyGroup>
  <Target Name="PostBuild" BeforeTargets="PostBuildEvent" Condition="'$(TargetFramework)' == 'net451'">
    <Exec Command="copy /y $(TargetPath) $(SolutionDir)..\examples\mvc5\lib" />
  </Target>
  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.25.0-preview-0033" />
    <PackageReference Include="LibGit2Sharp.NativeBinaries" Version="1.0.185" />
    <PackageReference Include="netstandard.library" Version="2.0.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\MarkdownWeb\MarkdownWeb.csproj" />
  </ItemGroup>
</Project>
