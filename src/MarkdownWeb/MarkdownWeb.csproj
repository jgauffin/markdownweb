<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.5;net451;netstandard2.0</TargetFrameworks>
    <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
    <Authors>Jonas Gauffin</Authors>
    <PackageLicenseUrl>https://opensource.org/licenses/apache-2.0</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jgauffin/markdownweb</PackageProjectUrl>
    <MinClientVersion>2.12</MinClientVersion>
    <Description>Wiki generator with markdown and git support (NetStandard 1.5+ and .NET 4.5.1)</Description>
    <Copyright>© jgauffin 2017</Copyright>
    <PackageTags>sequence-diagrams markdown html wiki</PackageTags>
    <Product>MarkdownWeb ($(TargetFramework))</Product>
    <IncludeSymbols>true</IncludeSymbols>
    <GenerateDocumentationFile Condition=" '$(Configuration)' == 'Release' ">true</GenerateDocumentationFile>
    <DebugType>full</DebugType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <RepositoryUrl>https://github.com/jgauffin/markdownweb</RepositoryUrl>
    <PackageReleaseNotes>Packages and added netstandard 2.0 as specific target</PackageReleaseNotes>
    <version>1.3.4</version>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Markdig" version="0.13.1" />
  </ItemGroup>
  
  <Target Name="PostBuild" BeforeTargets="PostBuildEvent" Condition="'$(TargetFramework)' == 'net451'">
    <Exec Command="copy /y $(TargetPath) $(SolutionDir)..\examples\mvc5\lib" />
  </Target>
  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <PackageReference Include="CsQuery">
      <Version>1.3.4</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.5'">
    <PackageReference Include="CsQuery.NetStandard">
      <Version>1.3.6.1</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="CsQuery.NetStandard">
      <Version>1.3.6.1</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.0" />
  </ItemGroup>

</Project>